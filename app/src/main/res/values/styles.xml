<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- ProgressBar style -->
    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/colorAccent</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>

    <style name="ProgressBarStyle.Gone">
        <item name="android:visibility">gone</item>
    </style>


    <!-- CardView style -->
    <style name="CardViewStyle" parent="CardView">
        <item name="cardCornerRadius">8dp</item>
    </style>


    <!-- TextView style -->
    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewStyle.Black">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextViewStyle.Black.Large">
        <item name="android:textSize">30sp</item>
    </style>

</resources>
